@model InternalBookingApp.Models.Booking
<h1>Delete Booking</h1>
<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Booking for @Model.Resource?.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Start Time</dt>
        <dd class="col-sm-10">@Model.StartTime.ToString("g")</dd>
        <dt class="col-sm-2">End Time</dt>
        <dd class="col-sm-10">@Model.EndTime.ToString("g")</dd>
        <dt class="col-sm-2">Booked By</dt>
        <dd class="col-sm-10">@Model.BookedBy</dd>
        <dt class="col-sm-2">Purpose</dt>
        <dd class="col-sm-10">@Model.Purpose</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>